@model IQueryable<TeamMember>

<section id="team" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2 class="section-heading">Our Amazing Team</h2>
                <h3 class="section-subheading text-muted">Sometimes dysfunctional teams can create functional things.</h3>
                @if (Authentication.AuthorizedMember != null)
                {
                    <h3 class="section-subheading"><a asp-action="Create">Create Team Member</a></h3>
                }
            </div>
        </div>
        <div class="row">
            @foreach (var teamMember in Model.OrderBy(m => m.Name))
            {
            <div class="col-sm-4">
                <div class="team-member">
                    <img src="@teamMember.ProfileImageUrl" class="img-responsive img-circle" style="width:200px; height:200px;" alt="">
                    @if (Authentication.AuthorizedMember != null)
                    {
                        <h4><a asp-action="Update" asp-route-Name="@teamMember.Name" class="text-muted">@teamMember.Name</a></h4>
                    }
                    else
                    {
                        <h4>@teamMember.Name</h4>
                    }
                    <p class="text-muted">@teamMember.Role</p>
                    <ul class="list-inline social-buttons">
                        <li>
                            <a href="@teamMember.TwitterUrl"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li>
                            <a href="@teamMember.FacebookUrl"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li>
                            <a href="@teamMember.LinkedinUrl"><i class="fa fa-linkedin"></i></a>
                        </li>
                        <li>
                            <a href="@teamMember.GitHubUrl"><i class="fa fa-github"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <p class="large text-muted">Every product we create is the result of our great team work!</p>
            </div>
        </div>
    </div>
</section>