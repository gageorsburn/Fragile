@model SignInModel

<section id="member" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Member authentication</h2>
                <h3 class="section-subheading text-muted">You need to update your password!</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <form asp-action="ChangePassword">
                    <input asp-for="ResetPasswordToken" type="hidden" value="@Model.ResetPasswordToken" />

                    <div class="form-group">
                        <input class="form-control" placeholder="Email" asp-for="Email" type="text" required readonly value="@Model.Email" />
                        @Html.ValidationMessageFor(m => m.Email)
                        <p class="help-block text-danger"></p>
                    </div>

                    <div class="form-group">
                        <input class="form-control" placeholder="Password" asp-for="Password" type="password" required data-validation-required-message="Please enter your password." />
                        @Html.ValidationMessageFor(m => m.Password)
                        <p class="help-block text-danger"></p>
                    </div>

                    <div class="clearfix"></div>

                    <div class="col-lg-12 text-center">
                        <div id="success"></div>
                        <button type="submit" class="btn btn-xl">Sign in!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
